<Window x:Class="RsyncFHIR.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RsyncFHIR.View"
        mc:Ignorable="d"
        Title="製品情報" Height="120" Width="300" ShowInTaskbar="False" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>製品名：</Label>
            <TextBlock Text="FHIR RSync" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>バージョン：</Label>
            <TextBlock Text="{Binding Path=Version}" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>著作権情報：</Label>
            <TextBlock Text="プロジェクトほげほげ" VerticalAlignment="Center" />
        </StackPanel>
    </StackPanel>
</Window>
